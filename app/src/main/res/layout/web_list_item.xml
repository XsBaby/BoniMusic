<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/pic_small"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:background="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/album_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pic_small"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/pic_small"
        android:text="刚好遇见你"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/album_title"
        android:layout_below="@+id/album_title"
        android:layout_marginTop="8dp"
        android:text="李玉刚"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/album_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/album_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="刚好遇见你"/>

    <ImageView
        android:id="@+id/web_list_more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_music_list_icon_more"/>

</RelativeLayout>